<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Make the project documents global (not company-specific) -->
    <record id="project_docs_multi_company_rule" model="ir.rule">
        <field name="name">Project Documents: Multi-company rule</field>
        <field name="model_id" ref="model_project_document"/>
        <field name="global" eval="True"/>
        <field name="domain_force">[(1,'=',1)]</field>
    </record>
</odoo>